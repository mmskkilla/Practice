import math
try:
    a = int(input('Введите первое число: '))
    b = int(input('Введите второе число: '))
    c = (input('Выберите действие: \nЕсли вы хотите сложить числа, введите {+}\nЕсли вы хотите вычесть числа, введите {-}\nЕсли вы хотите умножить числа, введите {*}\nЕсли вы хотите разделить числа, введите {/}\nЕсли вы хотите возвести a в степень b, введите {**}\nЕсли вы хотите взять логарифм b по основанию a, введите {log}'))
    if c == '+':
        v=a+b
    elif c == '-':
        v=a-b
    elif c == '*':
        v=a*b
    elif c == '/':
        v=a/b
    elif c == '**':
        v=a**b
    elif c == 'log':
        v=math.log(b,a)
    print('Результат = ', v)
except ValueError:
    print('Ошибка: введено нечисловое значение.')
except ZeroDivisionError:
    print('Ошибка: деление на ноль.')
except NameError:
    print('Операция не поддерживается.')
